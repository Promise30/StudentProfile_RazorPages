@page
@model StudentProfile_RazorPages.Pages.Students.CreateModel
<form method="POST">
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary pl-3">Create Student Profile</h2>
            <br />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-4">
            <label asp-for="@Model.Student.Name"></label>
            <input asp-for="@Model.Student.Name" class="form-control"/>
            <span asp-validation-for="@Model.Student.Name" class="text-bg-danger danger"></span>
        </div>
        <div class="mb-4">
            <label asp-for="@Model.Student.Gender"></label>
            <input asp-for="@Model.Student.Gender" class="form-control"/>
            <span asp-validation-for="@Model.Student.Gender" class="text-bg-danger danger"></span>

        </div>
        <div class="mb-4">
            <label asp-for="@Model.Student.Age"></label>
            <input asp-for="@Model.Student.Age" class="form-control"/>
            <span asp-validation-for="@Model.Student.Age" class="text-bg-danger danger"></span>

        </div>
        <div class="mb-4">
            <label asp-for="@Model.Student.Level"></label>
            <input asp-for="@Model.Student.Level" class="form-control"/>
            <span asp-validation-for="@Model.Student.Level" class="text-bg-danger danger"></span>

        </div>
        <div class="mb-4">
            <label asp-for="@Model.Student.course_of_study"></label>
            <input asp-for="@Model.Student.course_of_study" class="form-control"/>
            <span asp-validation-for="@Model.Student.course_of_study" class="text-bg-danger danger"></span>

        </div>
        <button type="submit" class="btn btn-primary" style="width: 150px">Create</button>
        <a asp-page="index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}