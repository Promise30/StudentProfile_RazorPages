@page
@model StudentProfile_RazorPages.Pages.Students.IndexModel


<div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Students List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-page="Create" class="btn btn-primary"><i class="bi bi-plus-square"></i>&nbsp;Create Profile</a>
            </div>  
        </div>


        <table class="table table-hover table-bordered table-stripped" style="width: 100%;">
            <thead>
                <tr>
                    <th>Student id</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Age</th>
                    <th>Level</th>
                    <th>Course</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var student in Model.Students){

                    <tr>
                        <td style="width: 9%">@student.Id</td>
                        <td style="width: 25%">@student.Name</td>
                        <td style="width: 10%">@student.Gender</td>
                        <td style="width: 6%">@student.Age</td>
                        <td style="width: 10%">@student.Level</td>
                        <td style="width: 30%">@student.course_of_study</td>

                        <td>
                            <div class="m-75 btn-group">
                                <a asp-page="Edit" asp-route-id="@student.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-page="Delete" asp-route-id="@student.Id" class="btn btn-danger mx-2">
                                         <i class="bi bi-trash-fill"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

